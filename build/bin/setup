#!/bin/bash

wget --no-check-certificate \
          https://raw.github.com/mitchellh/vagrant/master/keys/vagrant.pub \
          -O ~vagrant/.ssh/authorized_keys.1

cat ~vagrant/.ssh/authorized_keys.1 >> ~vagrant/.ssh/authorized_keys

df -h /
sudo dd if=/dev/zero of=/empty bs=1M || sudo rm /empty
df -h /

echo 'vagrant package --base "Vulpter (CentOS)"'